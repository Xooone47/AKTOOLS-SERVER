{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"]
    },
    "serve": {
      "cache": false
    },
    "test": {
      "cache": true
    }
  },
  "defaultBase": "main",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": ["default", "!{projectRoot}/**/*.spec.py", "!{projectRoot}/**/*.test.py"],
    "sharedGlobals": []
  },
  "plugins": [
    {
      "plugin": "@nxlv/python",
      "options": {}
    }
  ]
}

